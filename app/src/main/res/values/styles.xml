<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white</item>

    </style>

    <style name="imgWeatherIcon" parent="AppTheme">
        <item name="android:layout_width">@dimen/weather_image_width</item>
        <item name="android:layout_height">@dimen/weather_image_height</item>
    </style>
    <style name="imgWeatherIconLand" parent="AppTheme">
        <item name="android:layout_width">@dimen/weather_image_land_width</item>
        <item name="android:layout_height">@dimen/weather_image_land_height</item>
    </style>

    <style name="CityName" parent="AppTheme">
        <item name="android:textSize">@dimen/city_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="CityNameLand" parent="AppTheme">
        <item name="android:textSize">@dimen/city_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CityTemp" parent="CityName">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/city_temp_text_size</item>
    </style>
    <style name="CityTempLand" parent="CityName">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/city_temp_text_size</item>
    </style>

    <style name="ListItemText" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FutureWeatherText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
